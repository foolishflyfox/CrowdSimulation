<?xml version="1.0" encoding="UTF-8" ?>

<CrowdSimulation>
    <scene>
        <!-- 墙壁属性 -->
        <floorwall thickness="1" />
        <roomwall thickness="0.5" />
    </scene>
    <geometry>
        <floor>
            <outwall>
                <wall>
                    <vertex px="-50" py="0"/>
                </wall>
                <transition>
                    <vertex px="50" py="10"/>
                </transition>
            </outwall>
            
            <room id="1">
                <wall thickness="0.7">
                    <vertex px="20" py="10"/>
                </wall>
                <crossing>
                    <vertex px="30" py="10"/>
                </crossing>
            </room>
            <obstacle>
                <vertex px="15" py="15"/>
            </obstacle>

            <goals>
                <goal>
                    <vertex px="50" py="10"/>
                </goal>
            </goals>
        </floor>
    </geometry>
    <parameters>
        <gridsize value="0.3"/>
    </parameters>
    <agents>
        <!-- 优先级从上到下依次递减 -->
        <!-- 指定具体位置 -->
        <custom>
            <<vertex px="0" py="0"/>>
        </custom>
        <!-- 自动生成 -->
        <!-- 指定房间的特定区域进行填充，不指定count表示最密集状态 -->
        <auto typename="room" roomid="1"/>
        <!-- 指定房间进行填充，不指定count表示最密集状态 -->
        <auto typename="room" roomid="1" count="5" xmin="-10" ymin="-10" xmax="10" ymax="10"/>
        <!-- 如果类型为 floor，整个楼进行填充，不指定count表示最密集状态 -->
        <auto typename="floor" count="50"/>
    <agents>
</CrowdSimulation>



