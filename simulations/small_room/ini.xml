<?xml version="1.0" encoding="UTF-8" ?>

<CrowdSimulation>
    <scene scale="1.0" gridsize="0.6">
    </scene>
    <geometry>
        <floor>
            <outwall>
                <wall>
                    <vertex px="5" py="1"/>
                    <vertex px="5" py="5"/>
                    <vertex px="-5" py="5"/>
                    <vertex px="-5" py="-5"/>
                    <vertex px="5" py="-5"/>
                    <vertex px="5" py="-1"/>
                </wall>
                <transition>
                    <vertex px="5" py="-1"/>
                    <vertex px="5" py="1"/>
                </transition>
            </outwall>
            <goals>
                <goal>
                    <vertex px="5" py="-0.5"/>
                    <vertex px="5" py="0.5"/>
                    <vertex px="6" py="0.5"/>
                    <vertex px="6" py="-0.5"/>
                </goal>
            </goals>
        </floor>
    </geometry>
    <agents sum="1">
        <!-- 优先级从上到下依次递减 -->
        <!-- 指定具体位置 -->
        <custom>
            <vertex px="0" py="0"/>
        </custom>
    </agents>
</CrowdSimulation>



